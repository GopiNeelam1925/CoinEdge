<?xml version="1.0" encoding="utf-8"?>
<com.teamdecano.cryptocoin.settings.SettingsView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="@dimen/activity_padding">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/activity_padding"
        android:paddingTop="@dimen/activity_padding"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/orbitron"
        android:padding="@dimen/activity_padding"
        android:text="Powered by:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/btnCryptoCompare"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorTab"
        android:padding="@dimen/view_padding"
        android:src="@drawable/ic_crypto_compare" />


    <ImageView
        android:id="@+id/btnCoinMarketCap"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/view_padding"
        android:src="@drawable/ic_coin_market_cap" />

    <ImageView
        android:id="@+id/btnChasingCoins"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/view_padding"
        android:src="@drawable/ic_chasing_coins" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnDonate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPercentageNegative"
            android:text="DONATE"
            android:textColor="@color/colorWhite" />

    </RelativeLayout>

</com.teamdecano.cryptocoin.settings.SettingsView>